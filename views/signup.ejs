  <div class="flex-form">
    <form action="/signup"  method="POST">
      <fieldset>
        <div class="signup-title">
          <h3>Register</h3>
        </div>
        <div class="flex-name">
          <div class="first-name">
            <input type="text"  required id="fname" name="fname" placeholder="First Name" value=<% if (typeof renFirst != 'undefined') { %>
              <%= renFirst; %>
            <% } %>>
          </div>
          <div class="last-name">
            <input type="text"  required id="lname" name="lname" placeholder="Last Name" value=<% if (typeof renLast != 'undefined') { %>
              <%= renLast; %>
            <% } %>>
          </div>
        </div>
        <div class="flex-username">
          <div class="username">
            <input type="text"  required id="usernm" name="usernm" placeholder="Create Username" value=<% if (typeof renUsername != 'undefined') { %>
              <%= renUsername; %>
            <% } %>>
          </div>
        </div>
        <div class="flex-email">
          <div class="enter-email">
            <input type="text"  required id="email" name="email" placeholder="Enter Email" value=<% if (typeof renEmail != 'undefined') { %>
              <%= renEmail; %>
            <% } %>>
          </div>
          <input type="email"  required id="reemail" name="reemail" placeholder="Re-Enter Email" value=<% if (typeof renReemail != 'undefined') { %>
            <%= renReemail; %>
          <% } %>>
        </div>
        <div class="flex-password">
          <input type="password"  required id="pswd" name="pswd" class="pass-enter" placeholder="Create Password" value=<% if (typeof renPswd != 'undefined') { %>
            <%= renPswd; %>
          <% } %>>
          <input type="password"  required id="repswd" name="repswd" class="pass-reenter" placeholder="Re-Enter Password" value=<% if (typeof renRepswd != 'undefined') { %>
            <%= renRepswd; %>
          <% } %>>
        </div>
        <div class="flex-birth-notis">
          <div class="flex-birthday-section">
            <p style="font-size: small;">Please Enter Your Date of Birth</p>
              <input id="bdate" required name="bdate" type="date">
          </div>

          <div class="flex-notis-section">
            <p style="font-size: small;">Subscribe to Email Notifications?</p>
            <div class="flex-email-notis">
              <input name="notis" required id="notis1" value="Yes" type="radio"><p style="font-size: small;">Yes</p>
              <input name="notis" required id="notis2" value="No" type="radio"><p style="font-size: small;">No</p>
            </div>
          </div>
        </div>
        <div class="flex-button">
          <button class="flex-submit-button" type="submit"><p>Submit!</p></button>
        </div>
        </fieldset>
    </form>
